{
  "name": "argonaut-cli",
  "author": "darksworm (Ilmars Janis Bluzmanis)",
  "version": "1.4.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "[ -f \"src/data/licenses.ts\" ] || bun run generate:licenses; bun src/main.tsx",
    "start": "bun dist/index.js",
    "build": "bun run generate:licenses && bun run build:bundle",
    "build:bundle": "bun build src/main.tsx --outdir dist --target node --format esm --external node-pty",
    "build:binary": "bun run generate:licenses && bun build --compile --minify --sourcemap --bytecode  src/main.tsx --outfile argonaut-cli",
    "generate:licenses": "mkdir -p dist && bun x generate-license-file --input package.json --output dist/third-party-licenses.txt --overwrite && bun scripts/generate-licenses.cjs",
    "prepublishOnly": "bun run build",
    "publish:npm": "npm publish"
  },
  "description": "A CLI tool for managing and interacting with Argo CD.",
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/darksworm/argonaut/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksworm/argonaut.git"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "chalk": "^5.6.0",
    "execa": "^9.6.0",
    "ink": "^6.2.1",
    "ink-text-input": "^6.0.0",
    "node-pty": "^1.0.0",
    "react": "^19.1.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "generate-license-file": "^4.0.0",
    "react-devtools-core": "^6.1.5",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "bin": {
    "argonaut": "./dist/main.js"
  },
  "keywords": [
    "argocd",
    "argo-cd",
    "k8s",
    "kubernetes",
    "gitops",
    "continuous-delivery",
    "cd",
    "devops",
    "infrastructure-as-code",
    "applications",
    "applicationset",
    "resource-tree",
    "sync",
    "rollback",
    "health",
    "status",
    "events",
    "projects",
    "clusters",
    "repositories",
    "helm",
    "kustomize",
    "k9s-like",
    "terminal-ui",
    "text-ui",
    "react-cli",
    "react-tui",
    "tui",
    "terminal",
    "cli",
    "yaml"
  ]
}
