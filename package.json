{
  "name": "argonaut-cli",
  "author": "darksworm (Ilmars Janis Bluzmanis)",
  "version": "1.15.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "[ -f \"src/data/licenses.ts\" ] || bun run generate:licenses; bun src/main.tsx",
    "logs": "bun tools/logs.ts --session=latest",
    "build:node": "bun run generate:licenses && rollup -c rollup.config.js --configPlugin typescript2",
    "build:binary": "bun run generate:licenses && bun build --compile --minify --sourcemap src/main.tsx",
    "docker:build": "docker buildx build -t argonaut:dev .",
    "docker:run": "docker run --rm -it -e TERM=xterm-256color argonaut:dev",
    "generate:licenses": "mkdir -p dist && bun x generate-license-file --input package.json --output dist/third-party-licenses.txt --overwrite && bun scripts/generate-licenses.cjs",
    "tsx": "tsx src/main.tsx",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "test:ci": "bun test --coverage --coverage-reporter=lcov",
    "test:mutation": "bunx stryker run",
    "test:mutation:ci": "bunx stryker run stryker.ci.conf.json",
    "test:mutation:navigation": "bunx stryker run --mutate=\"src/commands/navigation.ts\" --commandRunner.command=\"bun test src/__tests__/commands/NavigationViewCommands.test.ts src/__tests__/commands/ClearCommands.test.ts src/__tests__/commands/CommandStateIntegration.test.ts\"",
    "test:mutation:application": "bunx stryker run --mutate=\"src/commands/application.ts\" --commandRunner.command=\"bun test src/__tests__/commands/ApplicationCommandLogic.test.ts src/__tests__/commands/CommandArgumentHandling.test.ts src/__tests__/commands/EdgeCaseCoverage.test.ts\""
  },
  "description": "A CLI tool for managing and interacting with Argo CD.",
  "engines": {
    "node": ">=18",
    "bun": ">=1.2.20"
  },
  "bugs": {
    "url": "https://github.com/darksworm/argonaut/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksworm/argonaut.git"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@codecov/rollup-plugin": "^1.9.1",
    "chalk": "^5.6.0",
    "execa": "^9.6.0",
    "ink": "^6.2.1",
    "ink-text-input": "^6.0.0",
    "neverthrow": "^8.2.0",
    "pino": "^9.9.0",
    "react": "^19.1.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@rollup/plugin-json": "^6.1.0",
    "@stryker-mutator/core": "^9.1.0",
    "@stryker-mutator/jest-runner": "^9.1.0",
    "@stryker-mutator/typescript-checker": "^9.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "generate-license-file": "^4.0.0",
    "ink-testing-library": "^4.0.0",
    "pino-pretty": "^13.1.1",
    "react-devtools-core": "^6.1.5",
    "react-test-renderer": "^19.1.1",
    "rollup": "^4.46.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "tsx": "^4.20.5"
  },
  "bin": {
    "argonaut": "./dist/cli.js"
  },
  "keywords": [
    "argocd",
    "argo-cd",
    "k8s",
    "kubernetes",
    "gitops",
    "continuous-delivery",
    "cd",
    "devops",
    "infrastructure-as-code",
    "applications",
    "applicationset",
    "resource-tree",
    "sync",
    "rollback",
    "health",
    "status",
    "events",
    "projects",
    "clusters",
    "repositories",
    "helm",
    "kustomize",
    "k9s-like",
    "terminal-ui",
    "text-ui",
    "react-cli",
    "react-tui",
    "tui",
    "terminal",
    "cli",
    "yaml"
  ]
}
